<% show_post ||= false %> <!-- To turn on condition to display on different pages -->

<div class="row">
  <div class="span 0 well text-center">
    <%= link_to vote_post_comment_path(comment.post, comment, vote: true), method: 'post' do %>
      <i class="icon-arrow-up"></i>
    <% end %>
    <%= comment.total_votes %> votes
    <%= link_to vote_post_comment_path(comment.post, comment, vote: false), method: 'post' do %>
      <i class="icon-arrow-down"></i>
    <% end %>
  </div>
  <div class="well span8">
    <em>"<%= comment.body %>"</em>
    <% if show_post %> <!-- Only user show page instead of post show page -->
      on <%= link_to comment.post.title, post_path(comment.post) %>
    <% end %>
    </br>
      <span class='quiet'> by</span> <%= link_to comment.creator.username, user_path(comment.creator) %>
    <small><%= display_datetime(comment.created_at) %></small>
  </div>
</div>